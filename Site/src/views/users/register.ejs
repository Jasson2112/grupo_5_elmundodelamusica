<!DOCTYPE html>
<html lang="en">

    <%- include("../partials/head.ejs")%>

    <body>
        <%- include("../partials/header.ejs")%>
        
    

        <main class="main">
            <%- include("../partials/bannerTop.ejs")%>
            <section class="containerRegister">
                <form action="/" method="POST">
                    <input type="text" name="name" placeholder="Nombre y apellido" style="border-radius: 5px;">
                    <input type="text" name="user" placeholder="Nombre de usuario" style="border-radius: 5px;">
                    <br>
                    <br>
                    <input type="email" name="email" placeholder="E-mail" style="border-radius: 5px;" size="40">
                    <br>
                    <br>
                    <label for="birth_date"><b>Fecha de nacimiento</b></label>
                    <br>
                    <input type="date" name="birth_date" id="birth_date" style="border-radius: 5px;">
                    <br>
                    <br>
                    <input type="text" name="addres" placeholder="Domicilio" style="border-radius: 5px;" size="40">
                    <br>
                    <br>
                    <h4>Elegí tu foto de usuario</h4>
                    <input type="file" name="avatar" style="border-radius: 5px;">
                    <br>
                    <br>
                    <input type="password" name="pass" placeholder="Elegí tu contraseña" style="border-radius: 5px;">
                    <input type="password" name="pass_confirm" placeholder="Confirmá tu contraseña" style="border-radius: 5px;">
                    <br>
                    <br>
                    <div class="registerButtons">
                        <input class="registerButton" type="submit" value="Crear" >
                        <input class="deleteButton" type="reset" value="Borrar" >
                    </div>
                    <br>
                    <br>
                </form>
            </section>
            <%- include("../partials/bannerBottom.ejs")%>

        </main>

      
        <%- include("../partials/footer.ejs")%>
        
    

    </body>
</html>