                    <br>
                    <br>

                    <h4>Marca</h4>
                    <div class="categ">
                        <div>
                            <select required name="Product_bra">
                                <% brands.forEach(Product_bra => { %>
                                    <option value="<%= Product_bra.id_brand %>"><%= Product_bra.name %></option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                    <!-- <input size="40" type="text" name="brand" placeholder="Marca del Producto" style="border-radius: 5px;"> -->
                    <br>
                    <br>
                    <input type="number" step="any"  name="price" min="1" placeholder="Valor de Producto" style="border-radius: 5px;">
                    <input type="number" step="any"  name="discount" min="0" max="100" placeholder="Descuento %" style="border-radius: 5px;">
                    <br>
                    <br>
                    <div class="createButtons">
                        
                        <input class="createButton" type="submit" value="Crear" >
                        <input class="deleteButton" type="reset" value="Borrar" > 
                    </div>
                    <br>
                    <br>
                </form>

            </section>
            <%- include("../partials/bannerBottom.ejs")%>

        </main>

      
