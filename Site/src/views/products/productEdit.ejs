<!DOCTYPE html>
<html lang="en">

    <%- include("../partials/head.ejs")%>

    <body>
        <%- include("../partials/header.ejs")%>
        
    

        <main class="main">
            <%- include("../partials/bannerTop.ejs")%>
            <section class="container">
                
                <form action="/" method="POST">
                    <input type="text" name="name" placeholder="Nombre de Producto" style="border-radius: 5px;">
                    <textarea name="Descripcion" id="" cols="60" rows="10" placeholder="Descripción del producto" style="border-radius: 5px;"></textarea>

                    <h4>Foto de producto</h4>
                    <input type="file" name="avatar" style="border-radius: 5px;">
                    <br>

                    </div>
    
                    <h4>Categoría</h4>
                    <div class="categ">
                        <div>
                            <input type="checkbox" name="interests" value="a" id="a">
                            <label for="a">Guitarra</label>
                        </div>
                        <div>
                            <input type="checkbox" name="interests" value="b" id="b">
                            <label for="b">Bajo</label>
                        </div>
                        <div>
                            <input type="checkbox" name="interests" value="c" id="c">
                            <label for="c">Batería</label>
                        </div>
                        <div>
                            <input type="checkbox" name="interests" value="d" id="d">
                            <label for="d">Saxo</label>
                        </div>
                        <div>
                            <input type="checkbox" name="interests" value="e" id="e">
                            <label for="e">Accesorios</label>
                        </div>
                    </div>
                    
                    <br>
                    <br>

                    <input type="text" name="brand" placeholder="Marca del Producto" style="border-radius: 5px;">
                    <input type="number" step="any"  name="price" min="1" placeholder="Valor de Producto" style="border-radius: 5px;">

                    <br>
                    <br>

                    <input type="submit" value="Actualizar" style="border-radius: 5px;">
                    <input type="reset" value="Borrar" style="border-radius: 5px;">
                    
                    <br>
                    <br>
                </form>

            </section>
            <%- include("../partials/bannerBottom.ejs")%>

        </main>

      
        <%- include("../partials/footer.ejs")%>
        
    

    </body>
</html>