<!DOCTYPE html>
<html lang="en">

    <%- include("../partials/head.ejs")%>

    <body>
        <%- include("../partials/header.ejs")%>
        
    

        <main class="main">
            <%- include("../partials/bannerTop.ejs")%>
            <section class="containerEdit">
                
                <form action="/products/<%= product.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                    <input size="40" type="text" name="name" value="<%= product.name %>" style="border-radius: 5px;">
                    <br>
                    <br>
                    <textarea name="description" id=""  cols="33" rows="5"  style="border-radius: 5px;"><%= product.description %></textarea>
                    <br>
                    <br>
                    <h4>Foto de producto</h4>
                    
                    <input type="file" name="image" style="border-radius: 5px;">
                    <br>
                    <br>

                    </div>
    
                    <h4>Categoría</h4>
                    <div class="categ">
                        <div>
                            <input type="checkbox" name="interests" value="a" id="a">
                            <label for="a">Guitarra</label>
                        </div>
                        <div>
                            <input type="checkbox" name="interests" value="b" id="b">
                            <label for="b">Bajo</label>
                        </div>
                        <div>
                            <input type="checkbox" name="interests" value="c" id="c">
                            <label for="c">Batería</label>
                        </div>
                        <div>
                            <input type="checkbox" name="interests" value="d" id="d">
                            <label for="d">Saxo</label>
                        </div>
                        <div>
                            <input type="checkbox" name="interests" value="e" id="e">
                            <label for="e">Accesorios</label>
                        </div>
                    </div>
                    
                    <br>
                    <br>

                    <input size="40" type="text" name="brand" value="<%= product.brand %>" style="border-radius: 5px;">
                    <br>
                    <br>
                    <input type="number" step="any"  name="price" min="1" value="<%= product.price %>" style="border-radius: 5px;">
                    <input type="number" step="any"  name="discount" min="0" max="100" value="<%= product.discount %>" style="border-radius: 5px;">
                    <br>
                    <br>
                    <div class="editButtons">
                    <input class="editButton" type="submit" value="Editar" >
                    <input class="deleteButton" type="reset" value="Borrar" >
                    </div>
                    <br>
                    <br>
                </form>

            </section>
            <%- include("../partials/bannerBottom.ejs")%>

        </main>

      
        <%- include("../partials/footer.ejs")%>
        
    

    </body>
</html>