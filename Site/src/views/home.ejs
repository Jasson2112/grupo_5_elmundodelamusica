<!DOCTYPE html>
<html lang="en">

    <%- include("partials/head.ejs")%>

    <body>
        <%- include("partials/header.ejs")%>
        
    

        <main class="main">
            <%- include("partials/bannerTop.ejs")%>

            <section class="container">
                <h3 class="productosDestacados">Productos destacados</h3>
                <div class="products">
                    <% products.forEach(products=> { %>
                    <article class="productList" >
                        
                        <a href="../products/productDetail"><img src="images/Producto-1.jpg" alt="p1" class="product_img"></a>

                        
                        <div class="main-article">
                            
                            <i class="fas fa-music"></i>
                            <p class="price"><%= products.price %></p>
                            <p class="finalPrice"><%= products.finalPrice %></p>
                            <p class="discount"><%= products.discount %></p>
                            <h4 class="description"><%= products.name %></h4>
                            <i class="fas fa-cart-arrow-down"  ></i>                            
                            
                        </div> 
                        
                    </article>
                    <% }) %> 
    
                </div>

            </section>    
                       


            <%- include("partials/bannerBottom.ejs")%>

        </main>

      
        <%- include("partials/footer.ejs")%>
        
    

    </body>
</html>